{
  "include": ["src", "bignumber.ts"],
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "module": "commonjs",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter checks
    "strict": true,                    // Keeps all strict flags on
    "noImplicitAny": true,             // Explicitly enable (redundant but clear)

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // ... other options
    "skipLibCheck": true,
    "strictNullChecks":true
  }
}